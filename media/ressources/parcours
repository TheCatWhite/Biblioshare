    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const buttons = document.querySelectorAll('.btn-path');
            
            buttons.forEach(button => {
                button.addEventListener('click', function() {
                    const card = this.closest('.path-card');
                    const title = card.querySelector('.path-title').textContent;
                    
                    alert(`Vous avez choisi: ${title}\n\nCette sélection a été enregistrée. Bon courage dans votre parcours !`);
                });
            });
        });
